@using _08042019_MVC.Models;
@{
    ViewBag.Title = "UrunDetay";
}

<h2>@Model.UrunAdi</h2>
<div class="row">
    <div class="col-md-3">
        <h4>Kategoriler</h4>
        <ul>
            @foreach (var item in (List<Kategori>)ViewBag.KategoriListesi)
            {
                <li>@Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID })</li>
            }
        </ul>
    </div>
    <div  class="col-md-9">
        <h3>Ürün Adı</h3><br />
        <h4>@Model.UrunAdi</h4>
        <div class="row">
            <div class="col-md-6">
                <img src="/images/@(Model.UrunID).jpg" style="max-width:100%; height:250px;" />
            </div>
            <div class="col-md-6">
              Ürün Fiyatı:<span style="color:red;font:bold;font-size:15px;">@Model.UrunFiyati TL</span>
                <form action="/Sepets/SepeteEkle">
                    <input type="hidden" name="id" id="id" value="@Model.UrunID" style="width:50px;" />
                    <input type="submit" id="gonder" value="Sepete Ekle" />
                </form>
            </div>

        </div>
    </div>
</div>
