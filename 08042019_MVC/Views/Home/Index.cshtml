@using _08042019_MVC.Models;
@{
    ViewBag.Title = "Ana Sayfa";
}
@{
    if (Html.ValidationMessage("Basarili_Admin").ToString() == Helper.SpanError("Basarili_Admin", "Başarılı!").ToString())
    {
        <script>Ac()</script>
    }
    else if (Html.ValidationMessage("Basarili_User").ToString() == Helper.SpanError("Basarili_User", "Başarılı!").ToString())
    {
        <script>Ac()</script>
    }
}
<div class="jumbotron">
    <h3> MVC Eticaret Projesi</h3>
</div>

<div class="row">
    <div class="col-md-3">
        <h4>Kategoriler</h4>
        <ul>
            @foreach (var item in (List<Kategori>)ViewBag.KategoriListesi)
            {
                <li>@Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID })</li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        <div class="row">
            @foreach (var item in (List<Urunler>)ViewBag.SonUrunler)
            {
                <div class="col-md-4" style="border:1px solid #808080">
                    <h5>@item.UrunAdi</h5>
                    <img src="/images/@(item.UrunID).jpg" style="max-width:100%; height:250px;" />

                    <p><a class="btn btn-default" href="@Url.Action("UrunDetay", "Home", new { id= item.UrunID })">Ürün Detay &raquo;</a> <span style="color:red;float:right;font-weight:bold;font-size:16px;">@item.UrunFiyati TL</span></p>
                </div>
            }

        </div>
    </div>
</div>


<div class="container">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

 
        <div class="carousel-inner">
            @*<div class="item active">
                <img src="la.jpg" alt="Los Angeles" style="width:100%;">
            </div>*@

            <div class="item">
                @foreach (var item in (List<Urunler>)ViewBag.SonUrunler)
            {
                    <div class="col-md-4" style="border:1px solid #808080">
                        <h5>@item.UrunAdi</h5>
                        <img src="/images/@(item.UrunID).jpg" style="max-width:100%; height:250px;" />

                        <p><a class="btn btn-default" href="@Url.Action("UrunDetay", "Home", new { id= item.UrunID })">Ürün Detay &raquo;</a> <span style="color:red;float:right;font-weight:bold;font-size:16px;">@item.UrunFiyati TL</span></p>
                    </div>
                }
            </div>

        </div>





      
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>